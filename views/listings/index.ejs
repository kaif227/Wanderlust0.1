<% layout("/layouts/boilerplate") %>
<body>
  <style>
    #filters{
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }
    .filter{
      text-align: center;
      margin-right: 2rem;
      margin-top: 2rem;
      opacity: 0.7;
    }
    .filter:hover{
      opacity: 1;
      cursor: pointer;
    }
    .filter p{
      font-size: 0.8rem;
    }
    .tax-info{
      display: none;
    }
    .tex-toggle{
      border: 1px solid black;
      border-radius: 1rem;
      height: 2.5rem;
      padding: 1rem;
      margin-left: 4.5rem;
      display: flex;
      align-items:center ;
    }
    

    </style>


      <div id="filters"> <!-- These are the all filres -->
        <div class="filter">
         <div> <i class="fa-solid fa-fire"></i></div>
          <p>Trending</p>
        </div>   <!-- this is individual filter -->
        <div class="filter">
          <div><i class="fa-solid fa-bed"></i></div>
           <p>Rooms</p>
         </div>   <!-- this is individual filter -->
         <div class="filter">
          <div><i class="fa-solid fa-mountain-city"></i></div>
           <p>Iconic city</p>
         </div>   <!-- this is individual filter -->
         <div class="filter">
           <div><i class="fa-solid fa-mountain"></i></div>
            <p>Mountain</p>
          </div>   <!-- this is individual filter -->
          <div class="filter">
            <div> <i class="fa-solid fa-house"></i></div>
             <p>Cabins</p>
           </div>   <!-- this is individual filter -->
           <div class="filter">
             <div><i class="fa-brands fa-fort-awesome"></i></div>
              <p>Castles</p>
            </div>   <!-- this is individual filter -->
            <div class="filter">
              <div><i class="fa-solid fa-person-swimming"></i></div>
               <p>Amazing Pool</p>
             </div>   <!-- this is individual filter -->
             <div class="filter">
              <div><i class="fa-solid fa-campground"></i></div>
               <p>Camping</p>
             </div>   <!-- this is individual filter -->
             <div class="filter">
               <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
              </div>   <!-- this is individual filter -->
              <div class="filter">
                <div><i class="fa-regular fa-snowflake"></i></div>
                 <p>Arctic</p>
               </div>   <!-- this is individual filter -->
               <div class="filter">
                <div><i class="fa-solid fa-landmark-dome"></i></i></div>
                 <p>Doms</p>
               </div>   <!-- this is individual filter -->
               <div class="filter">
                 <div><i class="fa-solid fa-ship"></i></div>
                  <p>Boats</p>
                </div>   <!-- this is individual filter -->
               <div class="tex-toggle">
                <div class="form-check-reverse form-switch">
                  <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                  <label class="form-check-label" for="flexSwitchCheckDefault">Display total after texes</label>
                </div>
               </div>
      </div>

      <div class="row row-cols-lg-3 row row-cols-md-2 row row-cols-sm-1 mt-3">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%=listing._id%>"class="listing-list">
            <div class="card col listing-card" >
                <img src="<%=listing.image.url%>" 
                class="card-img-top" 
                alt="listing_image" />
                 <div class="card-img-overlay"><%=listing.title%></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%= listing.title %></b>
                    <br> &#8377;
                    <%= listing.price%> / Night
                    <i class="tax-info"> &nbsp;&nbsp;+18% GST</i>
                </p>
                </div>
              </div>
            </a>
              <%  } %>
      </div>
</body>
<script>
  let taxSwitch = document.getElementById("flexSwitchCheckDefault");
  taxSwitch.addEventListener("click",()=>{
    let taxInfo = document.getElementsByClassName("tax-info");
    for(info of taxInfo){
      if(info.style.display != "inline"){

        info.style.display = "inline";
      }else{
        info.style.display = "none"
      }
    }
  })

</script>


